<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="dokter_view_search" model="ir.ui.view">
        <field name="name">dokter.view.search</field>
        <field name="model">h.dokter</field>
        <field name="arch" type="xml">
            <search string="">
                <filter name="dokter" string="dokter" domain="[('is_dokter', '=', 'True')]"/>
            </search>
        </field>
    </record>

    <record id="dokter_view_tree" model="ir.ui.view">
        <field name="name">dokter.view.tree</field>
        <field name="model">h.dokter</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" />
                <field name="alamat" />
                <field name="no_telp" />
                <field name="email" />
                <field name="tipemedis_id" />
            </tree>
        </field>
    </record>

    <record id="dokter_view_form" model="ir.ui.view">
        <field name="name">dokter.view.form</field>
        <field name="model">h.dokter</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="alamat" />
                        <field name="no_telp" />
                        <field name="email" />
                        <field name="tipemedis_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="dokter_action" model="ir.actions.act_window">
        <field name="name">List Dokter</field>
        <field name="res_model">h.dokter</field>
        <field name="view_mode">tree,form</field>
        <field name="context">
            {
                'search_default_dokter' : 1,
                'default_is_dokter': True
            }
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">belum ada dokter</p>
        </field>
    </record>

    <menuitem
        id="dokter_menu"
        name="Dokter"
        action="dokter_action"
        parent="person_menu_categ"
        sequence="10"/>

</odoo>
