<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="kamar_view_tree" model="ir.ui.view">
        <field name="name">kamar.view.tree</field>
        <field name="model">h.kamar</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="nama_kamar" />
                <field name="penghuni_ids" />
            </tree>
        </field>
    </record>

    <record id="kamar_view_form" model="ir.ui.view">
        <field name="name">kamar.view.form</field>
        <field name="model">h.kamar</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="nama_kamar" />
                        <field name="kapasitas" />
                        <field name="penghuni_ids">
                            <tree editable='bottom'>
                                <field name="pasien_id"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="kamar_action" model="ir.actions.act_window">
        <field name="name">kamar action</field>
        <field name="res_model">h.kamar</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem
        id="kamar_menu"
        name="List kamar"
        action="kamar_action"
        parent="kamar_menu_categ"
        sequence="10"/>

</odoo>
