<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="penjualan_view_tree" model="ir.ui.view">
        <field name="name">h.penjualan.view.tree</field>
        <field name="model">h.penjualan</field>
        <field name="arch" type="xml">
            <tree string="">
               <field name="name" />
               <field name="is_buyer" />
               <field name="pasien_id" />
               <field name="catatan" />
               <field name="dpenjualan_ids" />
            </tree>
        </field>
    </record>

    <record id="penjualan_view_form" model="ir.ui.view">
        <field name="name">penjualan.view.form</field>
        <field name="model">h.penjualan</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                   <group attrs="{'invisible': [('is_buyer','=', True)]}">
                        <field name="is_buyer" attrs="{'invisible':True}"/>
                        <field name="rekmedis_id" />
                        <field name="no_antrian" />
                        <field name="pasien_id" />
                        <field name="catatan" />
                        <field name="tgll" />
                        <field name="tipemedis_id" />
                        <field name="dpenjualan_ids" >
                        <tree>
                            <field name="obat_id" />
                            <field name="qty" />
                            <field name="sub_total" sum="total"/>
                        </tree>
                        </field>
                   </group>
                   <group  attrs="{'invisible': [('is_buyer','=', False)]}">
                        <!-- <field name="is_buyer" readonly='1'/> -->
                        <field name="tgll1" />
                        <field name="catatan1" />
                        <field name="dpenjualan_ids1" >
                            <tree editable="bottom">
                                <field name="obat_id" />
                                <field name="qty" />
                                <field name="sub_total" sum="total" />
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="penjualan_obat_action" model="ir.actions.act_window">
        <field name="name">daftar transaksi</field>
        <field name="res_model">h.penjualan</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{
            'default_is_buyer' : True
        }</field>
    </record>

    <menuitem
        id="penjualan_obat_menu"
        name="Daftar transaksi"
        action="penjualan_obat_action"
        parent="h_root_menu"
        sequence="10"/>

</odoo>
